<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/layout"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:padding="10dp"
    android:background="@drawable/bg_card"
    xmlns:fresco="http://schemas.android.com/tools"
    android:backgroundTint="#4FFFF3E0"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lexend"
        android:paddingStart="15dp"
        android:drawablePadding="15dp"
        android:paddingEnd="8dp"
        android:gravity="start"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/img_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/job_title"
        app:drawableStartCompat="@drawable/ic_account"
        app:drawableTint="@color/gas_green" />


    <TextView
        android:id="@+id/branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:drawablePadding="15dp"
        android:fontFamily="@font/lexend"
        android:gravity="start"
        android:paddingStart="15dp"
        android:paddingEnd="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/company_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/company_name"
        app:drawableStartCompat="@drawable/ic_function"
        app:drawableTint="@color/gas_green" />

    <TextView
        android:id="@+id/passout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="15dp"
        android:fontFamily="@font/lexend"
        android:gravity="start"
        android:paddingStart="15dp"
        android:layout_marginTop="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/company_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/job_type"
        app:drawableStartCompat="@drawable/ic_branch" />

    <LinearLayout
        android:id="@+id/hide_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/organisation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:drawablePadding="15dp"
        android:fontFamily="@font/lexend"
        android:gravity="start"
        android:paddingStart="15dp"
        android:paddingEnd="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_design"
        app:layout_constraintEnd_toStartOf="@+id/apply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/job_mode" />

    <TextView
        android:id="@+id/designation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="15dp"
        android:fontFamily="@font/lexend"
        android:gravity="start"
        android:paddingStart="15dp"
        android:layout_marginTop="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/company_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/job_type"
        app:drawableStartCompat="@drawable/ic_designation" />



    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="15dp"
        android:fontFamily="@font/lexend"
        android:gravity="start"
        android:paddingStart="15dp"
        android:layout_marginTop="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/company_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/job_type"
        app:drawableStartCompat="@drawable/ic_phone" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="15dp"
        android:fontFamily="@font/lexend"
        android:gravity="start"
        android:paddingStart="15dp"
        android:layout_marginTop="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/company_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/job_type"
        app:drawableStartCompat="@drawable/ic_type" />

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_gravity="center"
       android:layout_marginTop="8dp"
       android:layout_height="wrap_content">

       <ImageView
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:id="@+id/location"
           android:src="@drawable/ic_location"
           android:layout_gravity="center"
           android:layout_marginStart="15dp"
           />

    <TextView
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        android:fontFamily="@font/lexend"
        android:gravity="start"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toStartOf="@+id/apply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/job_location" />

       <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/lexend"
            android:gravity="start"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/apply"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/job_location" />

       <TextView
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/lexend"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            app:layout_constraintEnd_toStartOf="@+id/apply"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/job_location" />

   </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/personal_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/bg_card2"
        android:fontFamily="@font/lexend"
        android:paddingTop="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingBottom="8dp"
        android:text="@string/edit"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:ignore="TextContrastCheck"
        />

</LinearLayout>